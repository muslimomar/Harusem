<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/request_friend_list_item_profile_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/ic_account_profile" />

        <TextView
            android:id="@+id/request_friend_list_item_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/request_friend_list_item_profile_image_view"
            android:text="eminesa"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/request_friends_list_item_want_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_friend_list_item_name_text_view"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/request_friend_list_item_profile_image_view"
            android:text="sizi takip etmek istiyor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/request_friend_delete_image_view"
            android:src="@drawable/ic_tick" />

        <ImageView
            android:id="@+id/request_friend_delete_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close" />
    </RelativeLayout>
</RelativeLayout>
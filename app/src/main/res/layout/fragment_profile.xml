<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.william.harusem.fragments.ProfileFragment">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_circle_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/teacher" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_circle_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="John Doe"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/friends_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_tv"
                android:layout_centerHorizontal="true"
                android:alpha="0.6"
                android:text="Friends: 119"
                android:textColor="@color/white"
                android:textSize="11sp"

                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_between_options_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_account_profile"
                android:drawablePadding="@dimen/profile_drawable_padding"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="Account"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_options_profile"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_password_profile"
                android:drawablePadding="@dimen/profile_drawable_padding"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="Password"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/friends_requests_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_options_profile"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_notification_profile"
                android:drawablePadding="@dimen/profile_drawable_padding"
                android:focusable="true"

                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="Friend Requests"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="15sp"

                android:textStyle="bold" />


            <TextView
                android:id="@+id/friends_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_options_profile"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_friends_profile"
                android:drawablePadding="@dimen/profile_drawable_padding"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="Friends"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/log_out_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_options_profile"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_log_out_profile"
                android:drawablePadding="@dimen/profile_drawable_padding"
                android:drawableTint="@color/dark_red"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="Logout"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:id="@+id/relative_layout"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:contentDescription="recipientAvatar"
            android:src="@drawable/ic_customer_service" />

        <TextView
            android:id="@+id/dialog_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/recipient_dialog"
            android:lineSpacingExtra="5dp"
            android:padding="12dp"
            tools:text="Hi! Iâ€™m the bank representative. How may I help you?"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/speaker_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_speaker" />

    </LinearLayout>


</RelativeLayout>

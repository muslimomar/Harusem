<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="1dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_ImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25.3dp"
            android:layout_marginLeft="14.7dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="25.7dp"
            android:src="@drawable/mauser" />

        <TextView
            android:id="@+id/user_display_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_ImageView"
            tools:text="Jamal" />

        <Button
            android:id="@+id/message_btn"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/unfriend_btn"
            android:background="@color/colorPrimary"
            android:text="Message"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/unfriend_btn"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:elevation="0dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="#d14f4f"
            android:text="Unfriend"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/name_status_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_size"
        android:layout_centerVertical="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:src="@drawable/ic_user_new"
            />

        <TextView
            android:id="@+id/block_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@id/add_friend_btn"
            android:layout_toRightOf="@id/image_user"
            android:ellipsize="end"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            tools:text="Jamal asdf asdfa sadf afasdf fasd f f" />

        <Button
            android:id="@+id/add_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/red_button_radius"
            android:padding="5dp"
            android:text="Unfriend"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:elevation="8dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_ImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25.3dp"
            android:layout_marginLeft="14.7dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="25.7dp"
            android:src="@drawable/mauser" />

        <TextView
            android:id="@+id/user_display_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_ImageView"
            android:text="Jamal " />


        <ImageView
            android:id="@+id/unfriend_Button"
            android:layout_width="84dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/unfriend" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.william.harusem">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Harusem"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.MainActivity" />
        <activity
            android:name=".slides.MaterialIntroActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ui.activities.FriendRequestsActivity" />
        <activity
            android:name=".ui.activities.MessageActivity"
            android:parentActivityName=".ui.activities.MainActivity"
            android:theme="@style/NoActionBar"

            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity android:name=".ui.activities.LoginActivity"></activity>
        <activity android:name=".ui.activities.SignupActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".ui.activities.ProfileActivity" />
        <activity
            android:name=".ui.activities.PasswordActivity"
            android:parentActivityName=".ui.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.AccountActivity"
            android:parentActivityName=".ui.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.UsersActivity"></activity>
        <activity android:name=".ui.activities.FriendsActivity"></activity>

        <activity android:name=".ui.activities.ChatActivity"
            android:parentActivityName=".ui.activities.MainActivity"
            android:theme="@style/NoActionBar"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity android:name=".ui.activities.AttachmentImageActivity"/>
        <activity android:name=".ui.activities.ChatInfoActivity"/>
        <activity android:name=".ui.activities.SelectUsersActivity"/>

    </application>

</manifest>